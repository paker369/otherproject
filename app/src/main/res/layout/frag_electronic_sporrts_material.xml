<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:text="@string/recent_record"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_9"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_recent_record_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:background="@drawable/shape_0090ec_10"
            android:paddingLeft="@dimen/dp_24"
            android:paddingTop="@dimen/dp_4"
            android:paddingRight="@dimen/dp_24"
            android:paddingBottom="@dimen/dp_4"
            android:text="WE"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_recent_record_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:background="@drawable/shape_16000000_15"
            android:paddingLeft="@dimen/dp_24"
            android:paddingTop="@dimen/dp_4"
            android:paddingRight="@dimen/dp_24"
            android:paddingBottom="@dimen/dp_4"
            android:text="RNG"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_recent_record_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_16000000_15"
            android:paddingLeft="@dimen/dp_11"
            android:paddingTop="@dimen/dp_4"
            android:paddingRight="@dimen/dp_11"
            android:paddingBottom="@dimen/dp_4"
            android:text="@string/history_cross_swords"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_6"
        android:background="@drawable/shape_2f3538_7"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlt_contest"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_66"
            android:background="@drawable/shape_1e2930_7">

            <com.shehuan.niv.NiceImageView
                android:id="@+id/niv_material_img"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_25"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/tv_material_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/niv_material_img"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="-10dp"
                android:gravity="center_horizontal"
                android:layout_toLeftOf="@+id/llt_victory"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />

            <LinearLayout
                android:id="@+id/llt_victory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_toRightOf="@+id/niv_material_img"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_show_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_1"
                    android:text="@string/five"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/tv_victory_defeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/rlt_view"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_1"
                    android:text="@string/win_rate_1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/tv_win_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_F7FF00"
                    android:textSize="@dimen/sp_15" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlt_view"
                android:layout_width="@dimen/dp_124"
                android:layout_height="@dimen/dp_23"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_9"
                android:layout_marginBottom="@dimen/dp_12"
                android:background="@drawable/shape_white_10">

                <TextView
                    android:id="@+id/tv_line"
                    android:layout_width="@dimen/dp_62"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_0090ec_10" />

                <TextView
                    android:id="@+id/tv_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="@string/five"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_ten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="@string/ten"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_39"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_competition"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/competition"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/date"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/tv_team_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/team"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/score"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/tv_team_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/team"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />

        </LinearLayout>

        <include layout="@layout/layout_recycleview" />

    </LinearLayout>

</LinearLayout>