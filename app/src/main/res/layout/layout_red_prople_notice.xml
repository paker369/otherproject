<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_4"
    android:gravity="bottom"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_137"
        android:layout_weight="1"
        android:background="@drawable/shape_white_13"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.example.zhugeyouliao.widget.CircleImageView
            android:id="@+id/civ_notice_two_img"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_8"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_notice_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_notice_two" />

        <TextView
            android:id="@+id/tv_notice_two_people_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_marginBottom="@dimen/dp_3"
            android:drawableLeft="@mipmap/ic_people_num"
            android:textColor="@color/color_FFD500"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_notice_two_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_0090ec_10"
            android:paddingLeft="@dimen/dp_17"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_17"
            android:paddingBottom="@dimen/dp_3"
            android:text="@string/attention"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_171"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_weight="1"
        android:background="@drawable/shape_white_13"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.example.zhugeyouliao.widget.CircleImageView
            android:id="@+id/civ_notice_one_img"
            android:layout_width="@dimen/dp_66"
            android:layout_height="@dimen/dp_66"
            android:layout_marginTop="@dimen/dp_8"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_notice_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_notice_one" />

        <TextView
            android:id="@+id/tv_notice_one_people_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_marginBottom="@dimen/dp_3"
            android:drawableLeft="@mipmap/ic_people_num"
            android:textColor="@color/color_FFD500"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_notice_one_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_0090ec_10"
            android:paddingLeft="@dimen/dp_17"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_17"
            android:paddingBottom="@dimen/dp_3"
            android:text="@string/attention"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_137"
        android:layout_weight="1"
        android:background="@drawable/shape_white_13"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.example.zhugeyouliao.widget.CircleImageView
            android:id="@+id/civ_notice_three_img"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_8"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_notice_thre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_notice_three" />

        <TextView
            android:id="@+id/tv_notice_three_people_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_marginBottom="@dimen/dp_3"
            android:drawableLeft="@mipmap/ic_people_num"
            android:textColor="@color/color_FFD500"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_notice_thre_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_0090ec_10"
            android:paddingLeft="@dimen/dp_17"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_17"
            android:paddingBottom="@dimen/dp_3"
            android:text="@string/followed"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10" />

    </LinearLayout>

</LinearLayout>