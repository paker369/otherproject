<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_mine_bg" />

    <com.example.zhugeyouliao.widget.CircleImageView
        android:id="@+id/ic_mine_header"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_48"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_mine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_79"
        android:layout_toLeftOf="@+id/iv_mine_set"
        android:layout_toRightOf="@+id/ic_mine_header"
        android:gravity="left"
        android:singleLine="true"
        android:text="这里是我的名字"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_mine_name"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_toRightOf="@+id/ic_mine_header"
        android:text="足球看的就是你的心态足球看的就是你的心态"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10" />

    <ImageView
        android:id="@+id/iv_mine_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_62"
        android:layout_toLeftOf="@+id/iv_mine_send"
        android:padding="@dimen/dp_9"
        android:src="@mipmap/ic_mine_set" />

    <ImageView
        android:id="@+id/iv_mine_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_62"
        android:layout_toLeftOf="@+id/iv_mine_exit"
        android:padding="@dimen/dp_9"
        android:src="@mipmap/ic_mine_send" />

    <ImageView
        android:id="@+id/iv_mine_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_62"
        android:layout_marginRight="@dimen/dp_11"
        android:padding="@dimen/dp_9"
        android:src="@mipmap/ic_mine_exit" />

    <LinearLayout
        android:id="@+id/llt_conter"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_below="@+id/ic_mine_header"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shape_white_10"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_mine_like"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_mine_fans"
            android:gravity="center"
            android:paddingTop="@dimen/dp_13"
            android:text="98521"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_6"
            android:background="@color/color_22ffffff" />

        <TextView
            android:id="@+id/tv_mine_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_mine_message"
            android:gravity="center"
            android:paddingTop="@dimen/dp_13"
            android:text="98521"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_6"
            android:background="@color/color_22ffffff" />

        <TextView
            android:id="@+id/tv_mine_integral"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_mine_integral"
            android:gravity="center"
            android:paddingTop="@dimen/dp_13"
            android:text="98521"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llt_conter"
        android:layout_margin="@dimen/dp_16"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_mine_collet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginBottom="@dimen/dp_9"
            android:background="@drawable/shape_white_4"
            android:drawableLeft="@mipmap/ic_mine_select"
            android:drawableRight="@mipmap/ic_back_white_right"
            android:drawablePadding="@dimen/dp_16"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_7"
            android:text="@string/mine_collect"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_mine_send"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginBottom="@dimen/dp_9"
            android:background="@drawable/shape_white_4"
            android:drawableLeft="@mipmap/ic_mine_analyse"
            android:drawableRight="@mipmap/ic_back_white_right"
            android:drawablePadding="@dimen/dp_16"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_7"
            android:text="@string/mine_send"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_mine_gambit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginBottom="@dimen/dp_9"
            android:background="@drawable/shape_white_4"
            android:drawableLeft="@mipmap/ic_mine_gambit"
            android:drawableRight="@mipmap/ic_back_white_right"
            android:drawablePadding="@dimen/dp_16"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_7"
            android:text="@string/mine_gambit"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_mine_participate_gambit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginBottom="@dimen/dp_9"
            android:background="@drawable/shape_white_4"
            android:drawableLeft="@mipmap/ic_mine_participate_gambit"
            android:drawableRight="@mipmap/ic_back_white_right"
            android:drawablePadding="@dimen/dp_16"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_7"
            android:text="@string/mine_pulish_gambit"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_mine_attention"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginBottom="@dimen/dp_9"
            android:background="@drawable/shape_white_4"
            android:drawableLeft="@mipmap/ic_mine_manito"
            android:drawableRight="@mipmap/ic_back_white_right"
            android:drawablePadding="@dimen/dp_16"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_7"
            android:text="@string/mine_attention"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>