<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:background="@drawable/shape_white_10"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_article_details_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_14"
        android:text="名记曝猛龙有意哈登！1.3亿先生恐成 筹码，莱昂纳德故事重演？"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38">

        <com.example.zhugeyouliao.widget.CircleImageView
            android:id="@+id/civ_article_details_header"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_14"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/tv_article_details_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_toLeftOf="@+id/tv_article_details_read"
            android:layout_toRightOf="@+id/civ_article_details_header"
            android:text="老周红单推荐"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_8" />

        <TextView
            android:id="@+id/tv_article_details_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_article_details_name"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_toLeftOf="@+id/tv_article_details_read"
            android:layout_toRightOf="@+id/civ_article_details_header"
            android:text="老周红单推荐"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_8" />

        <TextView
            android:id="@+id/tv_article_details_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_18"
            android:text="阅读 7851"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_8" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_11ffffff" />


    <com.example.zhugeyouliao.widget.TopProgressWebView
        android:id="@+id/webVi_message_details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>