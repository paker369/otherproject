<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_5"
    android:background="@drawable/shape_1e2930_10"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_29">

        <com.example.zhugeyouliao.widget.CircleImageView
            android:id="@+id/civ_comment_header"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_marginRight="@dimen/dp_6"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/tv_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/civ_comment_header"
            android:text="小明哥看"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/tv_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_11"
            android:text="08-15 12：45"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_9" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_11ffffff" />

    <TextView
        android:id="@+id/tv_article_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_9"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_9"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/shape_181f24_4"
        android:paddingLeft="@dimen/dp_14"
        android:paddingTop="@dimen/dp_12"
        android:paddingRight="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_12"
        android:text="猛龙如果最终交易来哈登，球迷们也不需要感到特别惊讶。因为乌杰里当初已经证明了自己的魄力，更何况目前猛龙身处困境，彻底改变是一个重要的潜在选项"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_9" />

</LinearLayout>