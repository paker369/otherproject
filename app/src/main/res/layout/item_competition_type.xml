<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_73"
    android:layout_marginLeft="@dimen/dp_6"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_6"
    android:background="@drawable/shape_1e2930_7">

    <TextView
        android:id="@+id/tv_competition_left_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_6"
        android:drawableBottom="@mipmap/ic_community_top"
        android:drawablePadding="@dimen/dp_3"
        android:text="法甲"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15" />


    <TextView
        android:id="@+id/tv_competition_right_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_16"
        android:text="12-19 22：00"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_8" />

    <ImageView
        android:id="@+id/iv_competition_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_14"
        android:src="@mipmap/ic_community_live" />

    <TextView
        android:id="@+id/tv_competition_left_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_3"
        android:text="亚 6.25 3.5 0.08 0"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_8" />

    <TextView
        android:id="@+id/tv_competition_right_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_3"
        android:text="大 6.25 3.5 0.08 0"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_8" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_competition_center_top_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_12"
            android:text="半场3-1"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_8" />

        <TextView
            android:id="@+id/tv_competition_center_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_12"
            android:text="未开赛"
            android:textColor="@color/color_FFE400"
            android:textSize="@dimen/sp_8" />

        <TextView
            android:id="@+id/tv_competition_center_top_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  角球4-2"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_8" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_competition_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="波城   0-3   图卢兹"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/tv_competition_center_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_3"
        android:text="欧 6.25 3.5 0.08 0"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_8" />

</RelativeLayout>