<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_73"
    android:layout_marginLeft="@dimen/dp_6"
    android:layout_marginRight="@dimen/dp_6"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/shape_1e2930_7">

    <TextView
        android:id="@+id/tv_ball_material_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_8"
        android:text="12-19 22：00"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_8" />

    <TextView
        android:id="@+id/tv_ball_material_list_left_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginBottom="@dimen/dp_3"
        android:text="12-19 22：00"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_8" />

    <TextView
        android:id="@+id/tv_ball_material_list_right_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_11"
        android:text="半场3-1  角球4-2"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_8" />

    <TextView
        android:id="@+id/tv_ball_material_list_right_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_11"
        android:layout_marginBottom="@dimen/dp_3"
        android:text="大 6.25 3.5 0.08 0"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_8" />


    <TextView
        android:id="@+id/tv_ball_material_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginBottom="@dimen/dp_4"
        android:text="法甲"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/tv_ball_material_list_vs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ball_material_list_name"
        android:layout_centerHorizontal="true"
        android:text="波城  0-3   图卢兹"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/tv_ball_material_list_center_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_3"
        android:text="欧 6.25 3.5 0.08 0"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_8" />

</RelativeLayout>