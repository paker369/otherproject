<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

        <com.androidkun.xtablayout.XTabLayout
            android:id="@+id/xTablayout"
            android:layout_width="@dimen/dp_160"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            app:xTabDividerHeight="2dp"
            android:layout_centerInParent="true"
            app:xTabDividerWidthWidthText="true"
            app:xTabIndicatorColor="@color/white"
            app:xTabSelectedTextColor="@color/white"
            app:xTabSelectedTextSize="@dimen/sp_20"
            app:xTabTextColor="@color/white"
            app:xTabTextSelectedBold="true"
            app:xTabTextSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/iv_gift"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/dp_11"
            android:paddingLeft="@dimen/dp_11"
            android:src="@mipmap/ic_community_gift" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_05"
        android:background="@drawable/shadow_line" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_frag_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>