<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_150"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_9"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_17"
    android:background="@drawable/shape_5a3d45_10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dp_107"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_marginRight="@dimen/dp_30"
            android:orientation="vertical">

            <com.example.zhugeyouliao.widget.CircleImageView
                android:id="@+id/niv_cart_left_img"
                android:layout_width="@dimen/dp_84"
                android:layout_height="@dimen/dp_84"
                android:scaleType="fitCenter"
                android:padding="@dimen/dp_15"
                app:corner_radius="@dimen/dp_92"
                android:src="@mipmap/ic_recommend_hot_1" />

            <TextView
                android:id="@+id/tv_card_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_107"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_30"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.example.zhugeyouliao.widget.CircleImageView
                android:id="@+id/niv_cart_right_img"
                android:layout_width="@dimen/dp_84"
                android:layout_height="@dimen/dp_84"
                android:scaleType="fitCenter"
                android:padding="@dimen/dp_15"
                android:src="@mipmap/ic_recommend_hot_2" />

            <TextView
                android:id="@+id/tv_card_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_cart_contest_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_cart_state"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_12"
        android:text="1-1"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_41" />

    <TextView
        android:id="@+id/tv_cart_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_cart_contest_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/color_FFEE00"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/tv_cart_contest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_6"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10" />

</RelativeLayout>